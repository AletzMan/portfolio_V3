---
import TechTypeIcon from "../TechTypeIcon.astro"
import SocialButtons from "../SocialButtons.astro"
import Section from "../Section/Section.astro"

import { getI18n } from "../../i18n/index"
const { currentLocale } = Astro
const i18n = getI18n({ currentLocale })
---

<Section title={i18n.navigationMenu.home.text} id="home" hiddenTitle>
	<article class="home_content">
		<div class="home_picture">
			<img class="photoProfile" src="/profile-photo.webp" alt="Alejandro Garcia" />
			<div class="logosRotate">
				<div class="logotech logoJS">
					<img class="logo_image" src="/icons/javascript-logo.svg" />
				</div>
				<div class="logotech logoReact">
					<img class="logo_image" src="/icons/react-logo.svg" />
				</div>
				<div class="logotech logoTS">
					<img class="logo_image" src="/icons/typescript-logo.svg" />
				</div>
				<div class="logotech logoNext">
					<img class="logo_image" src="/icons/next-logo.svg" />
				</div>
				<div class="logotech logoCS">
					<img class="logo_image" src="/icons/csharp-logo.svg" />
				</div>
			</div>
		</div>
		<h1>Alejandro Garcia</h1>
		<h2>{i18n.homeSection.position}</h2>
		<div class="techs">
			<TechTypeIcon type="web" />
			<TechTypeIcon type="mobile" />
			<TechTypeIcon type="desktop" />
		</div>
		<SocialButtons hasButtonCV />
	</article>
</Section>
<style>
	.home_content {
		display: flex;
		flex-direction: column;
		justify-content: flex-start;
		align-items: center;
		text-align: center;
		padding: 1rem;
		box-sizing: border-box;
		background-color: transparent;
		pointer-events: all;
		backdrop-filter: blur(1px);

		@media (width < 698px) {
			padding: 0.5em;
		}
	}

	.home_content h1 {
		font-size: 3rem;
		padding: 0;
		height: max-content;
		margin: 0;
		color: var(--primaryColor);

		@media (width < 500px) {
			font-size: 1.9rem;
		}
	}

	.home_content h2 {
		padding: 0;
		margin: 0;
		font-size: 2rem;
		color: var(--secondaryColor);

		@media (width < 500px) {
			font-size: 1.4rem;
		}
	}

	.home_content p {
		margin-top: 2rem;
		font-size: 1.5rem;
	}

	.home_picture {
		position: relative;
		width: 200px;
		height: 200px;
		margin: 1rem 0 2em 0;
		padding: 0.25em;
		border: 3px solid var(--secondaryColor);
		background-color: var(--backgroundColor);
		border-radius: 15em;

		@media (width < 500px) {
			width: 160px;
			height: 160px;
		}

		&::after {
			position: absolute;
			left: -5%;
			top: -5%;
			content: "";
			width: 110%;
			height: 110%;
			border-radius: 15em;
			background-color: #d2cdcd25;
			z-index: -1;
		}
	}

	.photoProfile {
		width: 100%;
		height: 100%;
		border-radius: 15em;
		/*filter: sepia(1) blur(10px);*/
	}

	.techs {
		display: flex;
		justify-content: center;
		align-items: center;
		column-gap: 1em;
		margin: 0 0 3em 0;

		@media (width < 500px) {
			margin: 0 0 2em 0;
		}
	}

	.logosRotate {
		position: absolute;
		left: calc(50% - 130px);
		top: calc(50% - 130px);
		border-radius: 20em;
		width: 260px;
		height: 260px;
		border: 1px solid #68646820;
		background-color: #ebe1e901;
		animation: rotateLogos 12s linear infinite;
		z-index: 0;

		@media (width < 500px) {
			width: 190px;
			height: 190px;
			left: calc(50% - 95px);
			top: calc(50% - 95px);
		}
	}

	@keyframes rotateLogos {
		0% {
			transform: rotate(0);
		}
		100% {
			transform: rotate(360deg);
		}
	}

	.logotech {
		display: flex;
		align-items: center;
		justify-content: center;
		position: absolute;
		width: 1.35em;
		height: 1.35em;
		border-radius: 20em;
		transform: scale(1);
		animation: rotateLogo 12s linear infinite;
		box-shadow: -10px -10px 12px 7px #faf9fa30 inset;

		&:hover {
			border: 5px;

			& :first-child {
				transform: scale(4);
				opacity: 0.8;
			}
		}

		@media (width < 500px) {
			width: 1.5em;
			height: 1.5em;
		}
	}

	@keyframes rotateLogo {
		0% {
			transform: rotate(360deg);
		}
		100% {
			transform: rotate(0);
		}
	}

	.logoJS {
		left: 1.2em;
		top: 1.2em;
	}

	.logoReact {
		right: 1.2em;
		top: 1.2em;
	}

	.logoTS {
		right: -0.75em;
		top: 46%;
	}

	.logoNext {
		right: 1.2em;
		bottom: 1.2em;
	}

	.logoCS {
		left: 1.2em;
		bottom: 1.2em;
	}

	.logo_image {
		width: 1em;
		height: 1em;
		object-fit: cover;
		opacity: 0.5;
		transition: transform 0.3s ease-in-out;

		@media (width < 500px) {
			width: 1.5em;
			height: 1.5em;
		}
	}

	@keyframes moveLogo {
		0% {
			transform: scale(0.5);
		}
		100% {
			transform: scale(1);
		}
	}
</style>
