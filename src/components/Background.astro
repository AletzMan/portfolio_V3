<style>
	.lines {
		display: flex;
		flex-direction: row;
		position: fixed;
		top: 0;
		left: 0;
		width: calc(100svw - 1.5em);
		height: calc(100svh - 1em);
		height: 100%;
		margin: 0.5em;
		z-index: -1;
		overflow: hidden;
		border-radius: 1em 1em 0 0;
		border: 4px double var(--borderColor);
		background: url("/graph-paper.svg");
		background-repeat: repeat;
		background-size: 5%;

		@media (width < 500px) {
			width: calc(100svw - 1em);
		}

		& .lines_line {
			width: 12.5%;
			height: 100%;
			border-left: 1px dashed #d3d3d325;

			&:nth-child(1) {
				border-left: none;
			}
		}
	}
	.backgroundImage {
		position: absolute;
		top: 0em;
		left: 0em;
		opacity: 0.1;
		border-radius: 1em 1em 0 0;
		/*z-index: -1;*/
	}
</style>
