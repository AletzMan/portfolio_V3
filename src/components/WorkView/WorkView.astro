---
import type { Ii18nProject } from "../../Types/i18n"
import { Button } from "../Button/Button"
import TechTypeIcon from "../TechTypeIcon.astro"
import ViewIcon from "../svg/ViewIcon.astro"
import GitHub from "../svg/GitHub.astro"
import Browser from "../Browser/Browser.astro"
import ZoomIcon from "../svg/ZoomIcon.astro"

interface Props {
	work: Ii18nProject
}

const { work } = Astro.props
---

<article class="work">
	<div class="work_first">
		<h1 class="work_title">{work.name}</h1>
		<div class="work_picture">
			<!-- <img class="work_image" src={work.image} /> -->
			<Browser images={{ fixed: work.image, slides: work.slides }} type={work.type} />
		</div>
		<footer class="work_footer">
			<Button
				type="Button"
				text={work.demo.text}
				title={work.demo.title}
				disabled={work.demo.link === ""}
			>
				<ViewIcon />
			</Button>
			<Button
				type="Button"
				text={work.code.text}
				title={work.code.title}
				isSecondary
				disabled={work.code.title === ""}
			>
				<GitHub />
			</Button>
		</footer>
	</div>
	<div class="work_details">
		<div class="work_type">
			<TechTypeIcon className="work_type-icon" type={work.type} />
			<span class="work_type-text">{work.type}</span>
		</div>
		<div class="work_descriptions">
			{work.description.map((description) => <p class="work_description">{description}</p>)}
		</div>
		<div class="work_technologies">
			{
				work.technologies.map((tech, index) => (
					<div class="work_technology">
						<img class="work_technology-image" src={`/icons/${tech}-logo.svg`} />
						<span class="work_technology-text">{work.technologies_names[index]}</span>
					</div>
				))
			}
		</div>
	</div>
</article>
<style>
	.work {
		display: flex;
		flex-flow: row wrap;
		gap: 1em;
		width: 100%;
		padding: 0em;
		border-radius: var(--borderRadius);
		border: 1px dashed #d9e0ee50;
		box-shadow:
			5px 5px 15px 1px #101115dd,
			-7px -7px 15px #2e303a00;
		pointer-events: all;
		backdrop-filter: blur(5px);

		view-timeline-name: --cardProjectLeft;
		animation-timeline: --cardProjectLeft;
		animation-name: showCardProjectDown;
		animation-range: entry 0% cover 35%;
	}

	@media (width < 500px) {
		.work:nth-child(2n),
		.work:nth-child(2n + 1) {
			animation-name: showCardProjectDown;
		}
	}

	@keyframes showCardProjectDown {
		from {
			opacity: 0;
			transform: translateY(30%) scale(0);
		}
		to {
			opacity: 1;
			transform: translateY(0) scale(1);
		}
	}

	.work_first {
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		/*gap: 0.5em;*/
		padding: 0.5em;
		width: 100%;
		flex: 1 1 20em;
		border-radius: var(--borderRadius);
		background-color: var(--backgroundColor);

		@media (width < 450px) {
			border: none;
			padding: 0;
		}
	}

	.work_title {
		color: var(--primaryColor);
	}

	.work_type {
		display: flex;
		align-items: center;
		justify-content: flex-start;
		align-self: flex-end;
		width: max-content;
		column-gap: 0.25em;
		padding: 0 0 0.2em 0;
		margin: 0 0 0.2em 0;
		border-bottom: 2px solid #d9e0ee75;

		.work_type-icon {
			color: #d9e0ee75;
		}

		.work_type-text {
			color: #d9e0ee75;
			text-transform: capitalize;
			font-weight: 600;
			font-size: 0.85em;
		}
	}

	.work_picture {
		position: relative;
		display: flex;
		border-radius: var(--borderRadius);
		border: 2px solid var(--primaryColor);
		width: 100%;
		height: 100%;
		/*height: max-content;*/
		margin: 0.5em 0;
		overflow: hidden;
		background: linear-gradient(#0ebbdd, #29f29c);
		box-shadow:
			3px 2px 13px 1px #10111575,
			-7px -7px 15px #2e303a00;
	}

	.work_details {
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		row-gap: 0.5em;
		padding: 0.5em;
		width: 100%;
		flex: 1 1 20em;
	}

	.work_descriptions {
		display: flex;
		flex-direction: column;
		justify-content: center;
		gap: 1.2em;
		height: 100%;
		padding: 0.75em;
		border-radius: var(--borderRadius);
		background: radial-gradient(#344461, #222c3e);
	}

	.work_description {
		font-size: 0.8em;
		color: var(--primaryColor);
		font-weight: 400;
		width: 100%;
		text-wrap: pretty;
	}

	.work_technologies {
		display: flex;
		flex-flow: row wrap;
		gap: 0.5em;
		/*border-bottom: 1px dashed #d9e0ee50;*/
		/*border-top: 1px dashed #d9e0ee50;*/
		border: 1px dashed #c1d8eb35;
		border-radius: var(--borderRadius);
		background: linear-gradient(-45deg, #222c3e, #2e3b55, #222c3e);
		padding: 0.5em;
	}

	.work_technology {
		display: flex;
		align-items: center;
		justify-content: center;
		column-gap: 0.25em;
		width: max-content;
		padding: 0.25em 0.5em;
		border-radius: 0 0.25em 0 0.25em;
		background-color: #d9e0ee;
		background: linear-gradient(-20deg, #b4bdcf, #ffffff, #b4bdcf);
		background-size: 150%;
		border: 1px solid #dae1d600;
		transition: all 0.2s ease-in-out;
		box-shadow:
			3px 3px 10px 1px #10111570,
			0px 0px 10px #70707000 inset;

		.work_technology-image {
			width: 1.15em;
			height: 1.15em;
		}

		.work_technology-text {
			font-size: 0.6em;
			font-weight: 700;
			color: var(--backgroundColor);
		}

		&:hover {
			background-position: -200% -200%;
		}
	}

	.work_footer {
		display: flex;
		flex-direction: row;
		justify-content: space-between;
		padding: 0.5em 0;
		width: 100%;
	}
</style>
