<div class="lines">
	<svg class="backgroundImage" viewBox="0 0 1920 1920" xmlns="http://www.w3.org/2000/svg">
		<filter id="noiseFilter">
			<feTurbulence
				type="fractalNoise"
				baseFrequency="1.14"
				numOctaves="1"
				stitchTiles="stitch"></feTurbulence>
		</filter>

		<rect width="100%" height="100%" filter="url(#noiseFilter)"></rect>
	</svg>
	<div class="lines_line"></div>
	<div class="lines_line"></div>
	<div class="lines_line"></div>
	<div class="lines_line"></div>
	<div class="lines_line"></div>
	<div class="lines_line"></div>
	<div class="lines_line"></div>
</div>

<style>
	.lines {
		display: flex;
		flex-direction: row;
		position: fixed;
		top: 0;
		left: 0;
		width: calc(100svw - 2em);
		height: calc(100svh - 2em);
		margin: 1em;
		z-index: -1;
		overflow: hidden;
		border-radius: 1em;

		& .lines_line {
			width: 14.28%;
			height: 100%;
			border-left: 1px dashed var(--borderColor);

			&:nth-child(2) {
				border-left: none;
			}
		}
	}
	.backgroundImage {
		position: absolute;
		top: 0em;
		left: 0em;
		opacity: 0.1;
		/*z-index: -1;*/
	}
</style>
