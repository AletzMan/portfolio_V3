---
import { Button } from "./Button/Button"
import TechTypeIcon from "../components/TechTypeIcon.astro"
---

<section class="home">
	<article class="home_content">
		<picture class="home_picture">
			<img class="photoProfile" src="/profile-photo.webp" alt="Alejandro Garcia" />
		</picture>
		<h1>Alejandro Garcia</h1>
		<h2>Frontend Developer</h2>
		<!--
            <p>
                Hi, I'm Alejandro, a frontend developer based in Madrid, Spain. I'm passionate about web
                development and I love to create beautiful and functional websites. I'm always looking
                for new challenges and opportunities to grow as a developer.
            </p>
        -->
		<div class="techs">
			<TechTypeIcon type="web" />
			<TechTypeIcon type="mobile" />
			<TechTypeIcon type="desktop" />
		</div>
		<div class="socialButtons">
			<Button type="Link" text="GitHub" href="https://github.com/AletzMan">
				<svg class="socialButton_logo" width="24" height="24" viewBox="0 0 24 24">
					<path
						fill="currentColor"
						d="M12 2A10 10 0 0 0 2 12c0 4.42 2.87 8.17 6.84 9.5c.5.08.66-.23.66-.5v-1.69c-2.77.6-3.36-1.34-3.36-1.34c-.46-1.16-1.11-1.47-1.11-1.47c-.91-.62.07-.6.07-.6c1 .07 1.53 1.03 1.53 1.03c.87 1.52 2.34 1.07 2.91.83c.09-.65.35-1.09.63-1.34c-2.22-.25-4.55-1.11-4.55-4.92c0-1.11.38-2 1.03-2.71c-.1-.25-.45-1.29.1-2.64c0 0 .84-.27 2.75 1.02c.79-.22 1.65-.33 2.5-.33c.85 0 1.71.11 2.5.33c1.91-1.29 2.75-1.02 2.75-1.02c.55 1.35.2 2.39.1 2.64c.65.71 1.03 1.6 1.03 2.71c0 3.82-2.34 4.66-4.57 4.91c.36.31.69.92.69 1.85V21c0 .27.16.59.67.5C19.14 20.16 22 16.42 22 12A10 10 0 0 0 12 2Z"
					></path>
				</svg>
			</Button>
			<Button
				type="Link"
				text="LinkedIn"
				href="https://www.linkedin.com/in/alejandro-garcia-alonso-596788b8/"
			>
				<svg class="socialButton_logo" width="24" height="24" viewBox="0 0 24 24">
					<path
						fill="currentColor"
						d="M19 3a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h14m-.5 15.5v-5.3a3.26 3.26 0 0 0-3.26-3.26c-.85 0-1.84.52-2.32 1.3v-1.11h-2.79v8.37h2.79v-4.93c0-.77.62-1.4 1.39-1.4a1.4 1.4 0 0 1 1.4 1.4v4.93h2.79M6.88 8.56a1.68 1.68 0 0 0 1.68-1.68c0-.93-.75-1.69-1.68-1.69a1.69 1.69 0 0 0-1.69 1.69c0 .93.76 1.68 1.69 1.68m1.39 9.94v-8.37H5.5v8.37h2.77Z"
					></path>
				</svg>
			</Button>
			<Button type="Button" text="Email" isSecondary>
				<svg class="socialButton_logo" width="24" height="24" viewBox="0 0 24 24">
					<g fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-width="2">
						<path d="M0 0h24v24H0z"></path>
						<path
							fill="currentColor"
							d="M22 7.535V17a3 3 0 0 1-2.824 2.995L19 20H5a3 3 0 0 1-2.995-2.824L2 17V7.535l9.445 6.297l.116.066a1 1 0 0 0 .878 0l.116-.066L22 7.535z"
						></path>
						<path
							fill="currentColor"
							d="M19 4c1.08 0 2.027.57 2.555 1.427L12 11.797l-9.555-6.37a2.999 2.999 0 0 1 2.354-1.42L5 4h14z"
						></path>
					</g>
				</svg>
			</Button>
		</div>
	</article>
</section>

<style>
	.home {
		display: flex;
		justify-content: center;
		align-items: center;
		height: calc(100svh - 6em);
		margin: 1em 0 0 0;
		color: currentColor;
		border-radius: var(--borderRadius);
		background-color: transparent;
		backdrop-filter: blur(4px);
		z-index: 2;
	}

	.home_content {
		display: flex;
		flex-direction: column;
		justify-content: flex-start;
		align-items: center;
		text-align: center;
		padding: 1rem;
		box-sizing: border-box;
	}

	.home_content h1 {
		font-size: 3rem;
		padding: 0;
		height: max-content;
		margin: 0;
	}

	.home_content h2 {
		padding: 0;
		margin: 0;
		font-size: 2rem;
		color: var(--tertiaryColor);
	}

	.home_content p {
		margin-top: 2rem;
		font-size: 1.5rem;
	}

	.home_picture {
		width: 200px;
		height: 200px;
		margin-top: 2rem;
		padding: 0.25em;
		border: 3px solid var(--tertiaryColor);
		border-radius: 15em;
		overflow: hidden;
	}

	.photoProfile {
		width: 100%;
		height: 100%;
		border-radius: 15em;
	}

	.socialButtons {
		display: flex;
		justify-content: center;
		align-items: center;
		column-gap: 1em;
	}

	.techs {
		display: flex;
		justify-content: center;
		align-items: center;
		column-gap: 1em;
		margin: 0 0 3em 0;
	}
</style>
